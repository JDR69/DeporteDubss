# .env.example
# Copia este archivo como .env y configura tus variables de entorno

# URL de conexión a tu base de datos PostgreSQL
# Formato: postgres://usuario:contraseña@host:puerto/nombre_base_datos
DATABASE_URL=postgres://usuario:contraseña@localhost:5432/nombre_base_datos

# Clave secreta de Django (genera una nueva con: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())')
SECRET_KEY=tu-clave-secreta-aqui

# Modo de depuración (True para desarrollo, False para producción)
DEBUG=True

# Hosts permitidos (separados por coma)
ALLOWED_HOSTS=localhost,127.0.0.1
